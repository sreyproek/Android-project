<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Back Button -->
            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†"
                    android:textColor="#1E293B"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#1E293B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spacer for balance -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <!-- User Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <!-- User Avatar -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FBCFE8"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textColor="#1E293B"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jane.doe@example.com"
                    android:textColor="#64748B"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- EMERGENCY Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMERGENCY"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:letterSpacing="0.1" />

        <!-- Emergency Contacts -->
        <LinearLayout
            android:id="@+id/cardEmergencyContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contacts"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chevron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textColor="#64748B"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- SOS Message -->
        <LinearLayout
            android:id="@+id/cardSOSMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS Message"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chevron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textColor="#64748B"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- PREFERENCES Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREFERENCES"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:letterSpacing="0.1" />

        <!-- Location Sharing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Sharing"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Toggle Switch -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/cardNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chevron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textColor="#64748B"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Dark Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Toggle Switch -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- GENERAL Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERAL"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:letterSpacing="0.1" />

        <!-- Help & Support -->
        <LinearLayout
            android:id="@+id/cardHelpSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help &amp; Support"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chevron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textColor="#64748B"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- About -->
        <LinearLayout
            android:id="@+id/cardAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="#1E293B"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chevron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textColor="#64748B"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Log Out Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Log Out"
            android:textColor="#EF4444"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>